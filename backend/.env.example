# ======================
# LLM Model Configuration
# ======================
# Models can be changed here to switch between different LLM providers
# Examples: gpt-4, gpt-3.5-turbo, gpt-4-turbo, etc.

# Agent Model - Used by the AI chat agent
APP_MODELS__AGENT_MODEL=gpt-5-nano
APP_MODELS__AGENT_TEMPERATURE=0.0

# Job Analyzer Model - Used for analyzing job descriptions
APP_MODELS__JOB_ANALYZER_MODEL=gpt-5-nano
APP_MODELS__JOB_ANALYZER_TEMPERATURE=1.0

# ======================
# Job Scraper Configuration
# ======================
# Keywords to search for in job postings (JSON array format)
APP_SCRAPER__SEARCH_KEYWORDS=["Machine Learning","Data Scientist","Software Engineer","AI Engineer"]

# Maximum number of pages to scrape per search term
APP_SCRAPER__MAX_PAGES=3

# Number of days back to search for jobs (normal runs)
APP_SCRAPER__DAYS_FROM_POSTED=2

# Number of days back to search for jobs (initial setup run)
APP_SCRAPER__INITIAL_DAYS_FROM_POSTED=31

# ======================
# Job Processor Configuration
# ======================
# Number of jobs to process in each batch
APP_PROCESSOR__BATCH_SIZE=10

# Maximum number of retries for failed job analysis
APP_PROCESSOR__MAX_RETRIES=3

# Delay in seconds between retries
APP_PROCESSOR__RETRY_DELAY_SECONDS=5

# ======================
# API Keys (Required)
# ======================
# Add your API keys below
# OPENAI_API_KEY=your-openai-api-key-here
# SUPABASE_URL=your-supabase-url
# SUPABASE_KEY=your-supabase-key
